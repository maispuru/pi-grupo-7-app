<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>DigitalMac</title>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <ul>
        <h2>Nombre del producto</h2>
        <li><a href="http://localhost:3000/mercado/edit">Editar</a></li>
        <% for( let i = 0; i < listaProducto.length; i++ ) { %>
            <li><img src="/<%=listaProducto[i].imagenArchivo%>" alt="Producto"></li>
            <li><%=listaProducto[i].descripcion%></li>
        <% } %>
        <% for (let i = 0; i < productoComentarios.length; i++) { 
            const c = productoComentarios[i]; %>
            <li>
                <% if (c.fotoPerfil) { %>
                    <img src="/images/user/<%= c.fotoPerfil %>" alt="Usuario">
                <% } %>
            <%= c.usuario %>: <%= c.comentario %>
            </li>
        <% } %>
        <li>
            <form action="" method="post">
                <input type="text" name="comentario" class="comentario-input" placeholder="Agregar comentario" >
                <button type="submit" class="comentario-btn">AGREGAR COMENTARIO</button>
            </form>
        </li>
    </ul>
    <%- include('./partials/footer.ejs') %>
</body>
</html>