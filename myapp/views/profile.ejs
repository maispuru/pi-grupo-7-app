    <ul>
    <% for( let i = 0; i < produUsuario.length; i++ ) { %>
    <a href="http://localhost:3000/mercado/detalle/<%=produUsuario[i].id%>"></a>
        <li><img src="/<%=produUsuario[i].imagenArchivo%>" alt="Producto"></li>
        <li><%=produUsuario[i].nombre%></li>
        <li><%=produUsuario[i].descrpcion%></li>
        <li>Comentarios<%=produUsuario[i].imagenArchivo%></li>
