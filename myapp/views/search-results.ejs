<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>DigitalMac</title>
</head>
<body>
<%- include('./partials/header.ejs') %>
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title"> Resultados de busqueda</h2>
        </div>
                <% if (error.resultados) { %>
                    <p class="error"> <%= error %></p>
                    <% } %>

                        <% if (resultados.length === 0 && iphone.length < 3) { %>

                            <p class="error">No hay resultados para su criterio de b√∫squeda</p>

                            <% } %>

                                <div class="container products-wrapper">
                                    <div class="row">
                                        <% for(let i=0; i < resultados.length; i++) { %>
                                            <div class="col-12 col-sm-6 col-lg-3">
                                                <section class="product-box">
                                                    <a href="mercado/index/detalle/<%= resultados[i].id%>">
                                                        <figure class="product-box_image">
                                                            <img src="<%= resultados[i].imagenArchivo%>"
                                                                alt="<%= resultados[i].nombre %>">
                                                        </figure>
                                                        <article class="product-box_data">
                                                            <h2>
                                                                <%= resultados[i].nombre %>
                                                            </h2>
                                                            <p>
                                                                <%= resultados[i].descripcion %>
                                                            </p>


                                                        </article>

                                                    </a>
                                                    <% if ( resultados[i].idusuario) { %>
                                                        <p>
                                                            Subido por:
                                                            <a href="users/profile/<%= resultados[i].idUsuario %>">
                                                                <%= resultados[i].usuario %>
                                                            </a>
                                                        </p>
                                                        <% } %>
                                                </section>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
<%- include('./partials/footer.ejs') %>
</body>
</html>

